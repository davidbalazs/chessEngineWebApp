<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <import resource="hibernateConfiguration.xml"/>

    <alias name="defaultLatestNewsDao" alias="latestNewsDao"/>
    <bean id="defaultLatestNewsDao" class="com.davidbalazs.chess.daos.impl.DefaultLatestNewsDao"/>

    <alias name="defaultMessageDao" alias="messageDao"/>
    <bean id="defaultMessageDao" class="com.davidbalazs.chess.daos.impl.DefaultMessageDao"/>

    <alias name="defaultQuoteOfTheDayDao" alias="quoteOfTheDayDao"/>
    <bean id="defaultQuoteOfTheDayDao" class="com.davidbalazs.chess.daos.impl.DefaultQuoteOfTheDayDao"/>

    <alias name="defaultUserDao" alias="userDao"/>
    <bean id="defaultUserDao" class="com.davidbalazs.chess.daos.impl.DefaultUserDao"/>


    <alias name="defaultChessProblemDao" alias="chessProblemDao"/>
    <bean id="defaultChessProblemDao" class="com.davidbalazs.chess.daos.impl.DefaultChessProblemDao"/>

    <alias name="defaultChessStrategyDao" alias="chessStrategyDao"/>
    <bean id="defaultChessStrategyDao" class="com.davidbalazs.chess.daos.impl.DefaultChessStrategyDao"/>

    <alias name="defaultLatestNewsService" alias="latestNewsService"/>
    <bean id="defaultLatestNewsService"
          class="com.davidbalazs.chess.services.impl.DefaultLatestNewsService">
        <property name="latestNewsDao" ref="latestNewsDao"/>
    </bean>

    <alias name="defaultMessageService" alias="messageService"/>
    <bean id="defaultMessageService"
          class="com.davidbalazs.chess.services.impl.DefaultMessageService">
        <property name="messageDao" ref="messageDao"/>
    </bean>

    <alias name="defaultQuoteOfTheDayService" alias="quoteOfTheDayService"/>
    <bean id="defaultQuoteOfTheDayService" class="com.davidbalazs.chess.services.impl.DefaultQuoteOfTheDayService">
        <property name="quoteOfTheDayDao" ref="quoteOfTheDayDao"/>
    </bean>

    <alias name="defaultUserService" alias="userService"/>
    <bean id="defaultUserService" class="com.davidbalazs.chess.services.impl.DefaultUserService">
        <property name="userDao" ref="userDao"/>
    </bean>

    <alias name="defaultChessProblemService" alias="chessProblemService"/>
    <bean id="defaultChessProblemService" class="com.davidbalazs.chess.services.impl.DefaultChessProblemService">
        <property name="chessProblemDao" ref="chessProblemDao"/>
    </bean>

    <bean id="customUserDetailsService" class="com.davidbalazs.chess.services.impl.CustomUserDetailsService">
        <property name="userService" ref="userService"/>
    </bean>

    <alias name="defaultChessStrategyService" alias="chessStrategyService"/>
    <bean id="defaultChessStrategyService" class="com.davidbalazs.chess.services.impl.DefaultChessStrategyService">
        <property name="chessStrategyDao" ref="chessStrategyDao"/>
    </bean>
</beans>
