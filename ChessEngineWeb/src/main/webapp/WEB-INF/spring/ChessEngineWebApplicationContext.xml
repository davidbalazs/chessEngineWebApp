<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <alias name="defaultChessMoveFacade" alias="chessMoveFacade"/>
    <bean id="defaultChessMoveFacade" class="com.davidbalazs.chess.facades.impl.DefaultChessMoveFacade">
        <property name="chessPositionConverter" ref="chessPositionConverter"/>
        <property name="chessMoveConverter" ref="chessMoveConverter"/>
        <property name="moveAlgorithm" ref="moveAlgorithm"/>
    </bean>

    <alias name="defaultLatestNewsFacade" alias="latestNewsFacade"/>
    <bean id="defaultLatestNewsFacade" class="com.davidbalazs.chess.facades.impl.DefaultLatestNewsFacade">
        <property name="latestNewsService" ref="latestNewsService"/>
        <property name="latestNewsConverter" ref="latestNewsConverter"/>
    </bean>

    <alias name="defaultMessageFacade" alias="messageFacade"/>
    <bean id="defaultMessageFacade" class="com.davidbalazs.chess.facades.impl.DefaultMessageFacade">
        <property name="messageService" ref="messageService"/>
        <property name="messageConverter" ref="messageConverter"/>
    </bean>

    <alias name="defaultQuoteOfTheDayFacade" alias="quoteOfTheDayFacade"/>
    <bean id="defaultQuoteOfTheDayFacade" class="com.davidbalazs.chess.facades.impl.DefaultQuoteOfTheDayFacade">
        <property name="quoteOfTheDayService" ref="quoteOfTheDayService"/>
        <property name="quoteConverter" ref="quoteConverter"/>
    </bean>

    <alias name="defaultUserFacade" alias="userFacade"/>
    <bean id="defaultUserFacade" class="com.davidbalazs.chess.facades.impl.DefaultUserFacade">
        <property name="userService" ref="userService"/>
        <property name="userConverter" ref="userConverter"/>
    </bean>

    <bean id="chessPositionConverter" class="com.davidbalazs.chess.converters.ChessPositionConverter"/>
    <bean id="latestNewsConverter" class="com.davidbalazs.chess.converters.LatestNewsConverter"/>

    <bean id="messageConverter" class="com.davidbalazs.chess.converters.MessageConverter"/>

    <bean id="quoteConverter" class="com.davidbalazs.chess.converters.QuoteConverter"/>

    <bean id="userConverter" class="com.davidbalazs.chess.converters.UserConverter"/>

    <bean id="chessMoveConverter" class="com.davidbalazs.chess.converters.ChessMoveConverter">
        <property name="moveService" ref="moveService"/>
    </bean>

    <bean id="userHelper" class="com.davidbalazs.chess.helpers.UserHelper">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="additionalUserValidator" class="com.davidbalazs.chess.validators.AdditionalUserValidator">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="userEnhancer" class="com.davidbalazs.chess.enhancers.UserEnhancer">
        <property name="userHelper" ref="userHelper"/>
    </bean>

    <bean id="sideBarEnhancer" class="com.davidbalazs.chess.enhancers.SideBarEnhancer">
        <property name="latestNewsService" ref="latestNewsService"/>
        <property name="quoteOfTheDayService" ref="quoteOfTheDayService"/>
        <property name="chessProblemService" ref="chessProblemService"/>
    </bean>
</beans>
